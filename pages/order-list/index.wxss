.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container .tab-wrapper {
  background-color: #fff;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  width: 100%;
}

.container .tab-wrapper .tab-item {
  position: relative;
  padding: 6rpx 10rpx;
}

.container .tab-wrapper .selected {
  color: #157658;
}

.container .tab-wrapper .selected::after {
  content: '';
  display: inline-block;
  position: absolute;
  width: 40rpx;
  height: 4rpx;
  background-color: #157658;
  bottom: -14rpx;
  left: 50%;
  transform: translateX(-50%);
}

.container .order-item-wrapper {
  width: 710rpx;
  background-color: #F7F7F7;
}

.container .order-item-wrapper .flex-top {
  background-color: #fff;
  height: 80rpx;
  box-sizing: border-box;
  padding: 30rpx;
  font-size: 24rpx;
  color: #999;
  display: flex;
  justify-content: space-between;
  margin-bottom: 2rpx;
}

.container .order-item-wrapper .flex-top text:nth-child(2) {
  color: #9E2731;
}

.container .order-item-wrapper .flex-bottom {
  margin-top: 2rpx;
  height: 86rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 30rpx;
  font-size: 24rpx;
  color: #666;
}

.container .order-item-wrapper .flex-bottom .price {
  font-size: 32rpx;
  color: #333;
  margin-left: 4rpx;
}

.container .order-item-wrapper .flex-bottom .flex-bottom-right {
  color: #157658;
  background-color: #DCEBE6;
  font-size: 24rpx;
  padding: 12rpx;
}
