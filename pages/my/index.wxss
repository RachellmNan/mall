.container .user-wrapper {
  height: 360rpx;
  background-color: #DCEBE6;
  position: relative;
  width: 100%;
}

.container .user-wrapper .user-info {
  position: absolute;
  left: 70rpx;
  top: 40rpx;
  display: flex;
  align-items: center;
  z-index: 1;
}

.container .user-wrapper .user-info open-data {
  font-size: 28rpx;
}

.container .user-wrapper .user-info open-data:first-child {
  margin-right: 30rpx;
  width: 140rpx;
  height: 140rpx;
}

.container .user-wrapper .bottom-wrapper {
  background-color: #fff;
  position: absolute;
  left: 32rpx;
  top: 60rpx;
  width: 690rpx;
  height: 260rpx;
}

.container .user-wrapper .bottom-wrapper .category-list {
  position: absolute;
  width: 100%;
  bottom: 34rpx;
  display: flex;
  justify-content: space-around;
}

.container .user-wrapper .bottom-wrapper .category-list .flex-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
  color: #999999;
}

.container .user-wrapper .bottom-wrapper .category-list .flex-box .count {
  color: #157658;
}

.container .user-wrapper .bottom-wrapper .category-list .flex-box:first-child::after {
  content: '';
  height: 100%;
  right: 50%;
  position: absolute;
  display: inline-block;
  border: 2rpx solid #DDDDDD;
}

.container .order-wrapper {
  background-color: #fff;
  padding: 30rpx;
}

.container .order-wrapper .order-box {
  box-shadow: 0 0 16rpx 0 rgba(119, 163, 149, 0.2);
  width: 690rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  padding: 24rpx 30rpx 36rpx;
  box-sizing: border-box;
  justify-content: space-between;
}

.container .order-wrapper .order-box .subtitle {
  font-size: 24rpx;
  margin-bottom: 34rpx;
}

.container .order-wrapper .order-box .order-bottom {
  display: flex;
  justify-content: space-between;
}

.container .order-wrapper .order-box .order-bottom .optional-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 20rpx;
}

.container .order-wrapper .order-box .order-bottom .optional-wrapper .optional-name {
  font-size: 24rpx;
  color: #666;
  margin-top: 14rpx;
}

.container .additional-option-wrapper {
  background-color: #fff;
}

.container .additional-option-wrapper .additional-option {
  height: 90rpx;
  box-sizing: border-box;
  padding: 0 26rpx;
  line-height: 90rpx;
  border-bottom: 2rpx solid #F5F5F5;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.container .additional-option-wrapper .additional-option .additional-left m-icon {
  margin-right: 16rpx;
}
