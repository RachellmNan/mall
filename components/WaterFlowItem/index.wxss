.container {
  width: 340rpx;
  box-shadow: 0rpx 0rpx 12rpx 0rpx rgba(221, 221, 221, 0.5);
  margin-bottom: 30rpx;
}

.container image {
  width: 100%;
  height: 360rpx;
}

.container .bottom {
  padding: 0 16rpx 10rpx;
}

.container .bottom .title {
  display: inline-block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 10rpx;
}

.container .bottom .disprice {
  color: #157658;
  font-size: 32rpx;
  margin-right: 10rpx;
}

.container .bottom .price {
  color: #999999;
  font-size: 22rpx;
  text-decoration: line-through;
}

.container .bottom .subtitle {
  color: #999;
  font-size: 24rpx;
}
